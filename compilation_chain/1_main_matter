# Appendix
cd 1_main_matter
for location in choos_figures/review/tikz choos_figures/schemes/tikz co2hb_figures/tikz; do
	(cd "$location"
	echo Generating figures for $location
	mkdir -p out
	for texfile in *.tex; do
		echo Figure $texfile...
		lualatex -synctex=1 -output-directory out -interaction=nonstopmode "$texfile" > /dev/null
		echo Done!
	done
	)
done
cd ..